/*   index   swiper  */

swiper.index-swiper {
 background-color:#FFF;
margin:30rpx;
box-shadow:0px 5px 20px -5px #DDD;
border-radius:10rpx;
height:420rpx;

}
.swiper-item{
position:absolute;
width:100%;
height:100%;
transform:translate(0%, 0px) translateZ(0px);
border-radius:10rpx;

}
swiper .swiper-mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
}

swiper image {
  display: block;
  width: 100%;
  height: 360rpx;

  border-radius:10rpx;

}

swiper .swiper-desc {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
 text-align: center;
  background-color: #FFFFFF;
  color: rgb(49, 48, 48);
  line-height: 100rpx;
 padding:0 30rpx;

  font-weight: 500;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 30rpx;

 border-bottom-left-radius:10rpx;
 border-bottom-right-radius:10rpx;

}

